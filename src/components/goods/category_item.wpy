<template>
  <view class="category-box column">
    <view class="category-item row-center">
      <text>{{category.name}}</text>
      <view wx:if="{{!category.check}}">
        <view class="zan-btn zan-btn--small" @tap="remove({{category.id}})">删除</view>
        <view class="zan-btn zan-btn--small  zan-btn--primary" @tap="edit({{category.id}})">编辑</view>
      </view>
      <view class="icon-box" wx:if="{{category.check}}">
        <icon class="top" wx:if="{{index != 0}}" @tap.stop="top({{index}})"/>
        <icon class="up-arrow" wx:if="{{index != 0}}" @tap.stop="up({{index}})"/>
        <icon class="down-arrow" wx:if="{{index != size}}" @tap.stop="down({{index}})"/>
        <icon class="bottom" wx:if="{{index != size}}" @tap.stop="bottom({{index}})"/>
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy';
  import goods from '../../api/goods';
  import Tips from '../../utils/Tips';
  import Event from '../../utils/Event';

  export default class NoticeItem extends wepy.component {
    props = {
      category: {},
      index: {},
      size: {}
    };
    methods = {
      async remove (categoryId) {
        await Tips.confirm('确认删除该分类？');
        await goods.removeInnerCategories(categoryId);
        await Tips.success('删除成功');
        Event.emit(Event.CATEGORY_LIST_UPDATE);
      },
      edit (categoryId) {
        const param = {
          mode: 'edit',
          categoryId
        };
        this.$root.$navigate('category_edit', param);
      },
      up(index) {
        this.$emit('up', index)
      },
      down(index) {
        this.$emit('down', index)
      },
      top(index) {
        this.$emit('top', index)
      },
      bottom(index) {
        this.$emit('bottom', index)
      }
    };
  }
</script>

