<template>
  <view class="container" wx:if="{{init}}">
    <view class="weui-cells weui-cells-form">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" @tap="screen(0, 'CUSTOMERS', 0)">
        <view class="weui-cell__bd">全部客户</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </view>
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" @tap="screen(0, 'MEMBERS', 1)">
        <view class="weui-cell__bd">会员</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </view>
    </view>
    <view class="mt20"/>
    <view class="weui-cells weui-cells-form" wx:if="{{card && card.supplyDiscount == 1}}">
      <repeat for="{{discountRules}}" key="index" index="index" item="item">
        <!-- 等级 -->
        <view class="weui-cell weui-cell_access" @tap="screen({{item.level}}, 'MEMBERS', 1)">
          <view class="weui-cell__bd">{{item.levelName}}</view>
          <text class="weui-cell__ft weui-cell__ft_in-access"/>
        </view>
      </repeat>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy';
  import member from '../../api/member';
  import base from '../../mixins/base';
  import Navigator from '../../components/weui/navigator';
  import WxUtils from '../../utils/WxUtils';

  export default class UserManagement extends wepy.page {
    def = {
      init: false,
      card: {},
      discountRules: [],
      type: null
    };
    data = {...this.def};

    async onLoad (option) {
      this.type = option.type;
      this.card = await member.cardInfo();
      if (this.card) {
        this.discountRules = this.card.discountRules;
      }
      this.loaded();
    };

    methods = {
      screen (level, selectedId, showBar) {
        const params = {
          showBar: showBar,
          type: this.type,
          level: level,
          selectedId: selectedId
        };
        WxUtils.backOrNavigate('/pages/manusl/customer_list?params=' + JSON.stringify(params));
      }
    };
    mixins = [base];
    components = {
      NavAllUser: Navigator,
      NavMemberUser: Navigator
    };
    config = {
      navigationBarTitleText: '用户管理'
    };
  }
</script>
<style lang="scss">
  @import "../../styles/variable";
</style>
