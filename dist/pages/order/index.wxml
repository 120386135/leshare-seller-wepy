
  
  <view class="zan-tab">
    <block  wx:if="{{$ZanTab$tab.scroll}}">
      <scroll-view class="zan-tab__bd zan-tab__bd--scroll {{ $ZanTab$fixed ? 'zan-tab__bd--fixed' : '' }}" scroll-x="true" style="height:{{ $ZanTab$tab.height ? $ZanTab$tab.height + 'px' : 'auto' }}">
        <view wx:for="{{$ZanTab$tab.list}}" wx:key="id" class="zan-tab__item {{$ZanTab$tab.selectedId == item.id ? 'zan-tab__item--selected' : ''}}" data-component-id="{{$ZanTab$componentId}}" data-item-id="{{item.id}}" bindtap="$ZanTab$handleZanTabChange">
          <view class="zan-tab__title"><text>{{item.title}}</text></view>
        </view>
      </scroll-view>
    </block>
    <block  wx:else>
      <view class="zan-tab__bd {{$ZanTab$fixed ? 'zan-tab__bd--fixed' : ''}}">
        <view wx:for="{{$ZanTab$tab.list}}" wx:key="id" class="zan-tab__item {{$ZanTab$tab.selectedId == item.id ? 'zan-tab__item--selected' : ''}}" data-component-id="{{$ZanTab$componentId}}" data-item-id="{{item.id}}" bindtap="$ZanTab$handleZanTabChange">
          <view class="zan-tab__title"><text>{{item.title}}</text></view>
        </view>
      </view>
    </block>
  </view>

  <!--订单列表-->
  <block wx:for="{{orders}}" wx:for-index="index" wx:for-item="item" wx:key="index">
    
  <view class="order-item-container column">
    <!--基本信息-->
    <view class="order-header-container row-between">
      <view class="order-shop-info-container">
        <image class="icon" src="/images/icons/shop-gray.png"/>
        <text class="shop-info-name">{{item.shopName}}</text>
        <image class="icon" src="/images/icons/more-gray.png"/>
      </view>
      <text class="sm primary">{{item.statusText}}</text>
    </view>

    <view class="order-goods-list-container">
      <block wx:for="{{item.orderGoodsInfos}}" wx:for-index="$OrderItem$index" wx:for-item="$OrderItem$item" wx:key="$OrderItem$goodsId">
        
  <view class="order-goods-container row-between">
    <!--商品图片-->
    <image class="order-goods-image" src="{{$OrderItem$item.imageUrl}}"/>

    <!--商品说明-->
    <view class="order-goods-title-container column">
      <text>{{$OrderItem$item.goodsName}}</text>
      <text class="muted">{{$OrderItem$item.skuText}}</text>
    </view>

    <!--商品购买信息-->
    <view class="order-goods-buy-container column">
      <text>￥{{$OrderItem$item.goodsPrice}}</text>
      <text class="muted">x{{$OrderItem$item.count}}</text>
    </view>
  </view>

        <view class="hr"/>
      </block>
    </view>

    <!--汇总信息-->
    <view class="order-footer-container row-end">
      <text class="mr20">共{{item.orderGoodsInfos.length}}件商品</text>
      <text>合计:</text>
      <text class="major xl mr20">￥{{item.finalPrice}}</text>
      <text>(含运费￥{{item.postFee}})</text>
    </view>

    <!--操作栏-->
    <view class="order-action-bar row-end">
      <view class="zan-btn zan-btn--small">取消订单</view>
      <view class="zan-btn zan-btn--small zan-btn--primary">确认付款</view>
    </view>
  </view>

  </block>
  <view class="tab-border"/>