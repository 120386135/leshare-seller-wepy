/******全局页面******/
page {
  height: 100%;
  background-color: #F5F5F5;
}

/******外边距原子样式******/
.mr10 {
  margin-right: 10rpx;
}

.mr20 {
  margin-right: 20rpx;
}

.ml20 {
  margin-left: 20rpx;
}

.ml20 {
  margin-left: 20rpx;
}

.mt10 {
  margin-top: 10rpx;
}

.mt20 {
  margin-top: 20rpx;
}

.mb10 {
  margin-bottom: 10rpx;
}

.mb20 {
  margin-bottom: 20rpx;
}

/******通用样式******/
text, view {
  font-family: MicroSoft Yahei;
  font-size: 28rpx;
  color: #262626;
}

text.white {
  color: #FFF;
}

text.muted {
  color: #A3A3A3;
}

text.primary {
  color: #1296DB;
}

text.major {
  color: #FF6200;
}

text.xl {
  font-size: 32rpx;
}

text.sm {
  font-size: 26rpx;
}

view.bg-white {
  background-color: white;
}

/******FELX 布局样式******/
.row, .row-between, .row-around, .row-end {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.row-between {
  justify-content: space-between;
}

.row-around {
  justify-content: space-around;
}

.row-end {
  justify-content: flex-end;
}

.column, .column-center, .column-around, .column-between {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.column-center {
  align-items: center;
}

.column-around {
  align-items: center;
  justify-content: space-around;
}

.column-between {
  align-items: center;
  justify-content: space-between;
}

/******图片样式******/
.icon {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}

/******间隔******/
.hr {
  width: 100%;
  height: 6rpx;
}

.tab-border {
  position: fixed;
  height: 1px;
  width: 100%;
  background-color: #E6E8EB;
  bottom: 0;
}

